
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var Produktet = (List<ProductQuantity>)ViewBag.listaEProduktevePrejDatabazes;
}

<h1>Details</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
               Quantity
            </th>
            <th>
                Linku per Foto
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var Produkti in Produktet) {
        <tr>
            <td>
               @Produkti.ProductName
            </td>
            <td>
               @Produkti.Quantity
            </td>
            <td>
                @{ 
                    var linku = "https://www.google.com/search?q=" + @Produkti.ProductName + "&tbm=isch&source=Inms";
                }
              <a href="@linku" target="_blank">Kliko per foto</a>
            </td>
        </tr>
}
    </tbody>
</table>
